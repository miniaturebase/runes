{
    "name": "miniaturebase/runes",
    "description": "A low-level string character analysis library for PHP.",
    "keywords": [
        "string",
        "security",
        "ASCII",
        "utf-8",
        "utf-16",
        "utf-32",
        "analysis"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Jordan Brauer",
            "email": "18744334+jordanbrauer@users.noreply.github.com"
        }
    ],
    "require": {
        "php": ">=7.1 || >=8.0",
        "ext-intl": "*"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.13",
        "friendsofphp/php-cs-fixer": "^2.18",
        "pestphp/pest": "^1.0",
        "phpunit/phpunit": "^9.3",
        "symfony/var-dumper": "^5.2"
    },
    "autoload": {
        "psr-4": {
            "Minibase\\Rune\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Minibase\\Rune\\Test\\": "tests/"
        },
        "files": [
            "src/helpers.php"
        ]
    }
}
